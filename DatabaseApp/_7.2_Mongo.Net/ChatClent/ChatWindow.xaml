<Window x:Class="ChatClent.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SoftUniChat" Height="497.761" Width="525">
    <Grid Margin="10,10,10,0" Height="450" VerticalAlignment="Top">
        <TextBox 
            Name="Users" 
            Margin="10,10,10,0" 
            Height="50" 
            VerticalAlignment="Top" 
            IsReadOnly="True"/>
        <TextBox 
            Name="MessageWindow" 
            Margin="10,70,10,140" 
            IsReadOnly="True" 
            TextWrapping="Wrap" 
            AcceptsReturn="True"/>
        <TextBox 
            Name="InputMessage" 
            Margin="10,320,150,50"/>
        <Button 
            Name="AddMessageButton" 
            Margin="360,320,10,50" 
            Click="AddMessageButton_OnClick">
            Add Message
        </Button>
        <Button Margin="10,409,255,10" Name="ExitButton" Click="ExitButton_OnClick">Exit</Button>
        <Button Margin="255,409,10,10" Name="History" Click="HistoryButton_OnClick"> History </Button>
    </Grid>
</Window>
